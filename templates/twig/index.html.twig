{% extends 'base.html.twig' %}

{% block title %}Hello TwigController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>
		<ul>
			<li>Nom :
				{{ nom ?? "non défini" }}</li>
			<li>Prenom :
				{{ prenom ?? "non défini" }}</li>
		</ul>
		<ul>
			{% for elt in range( min ?? 0, max ?? 1 , step ?? 1) %}
				<li>
					{{ elt }}
				</li>
			{% endfor %}
		</ul>
		<a href="{{ path("home") }}">Accueil</a>
		<a href="{{ url("home") }}">Accueil</a>
	</div>
{% endblock %}
