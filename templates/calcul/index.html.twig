{% extends 'base.html.twig' %}

{% block title %}Hello CalculController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>

		<ul>
			{% set resultat = 0 %}
			{% if op == "plus" %}
				{% set resultat = val1 + val2 %}
                {% set operateur = "+" %}
				<li>{{val1 ~ ' '~ operateur ~ ' ' ~ val2 ~ " = " ~ resultat}}</li>
			{% elseif op == "moins" %}
				{% set resultat = val1 - val2 %}
                {% set operateur = "-" %}
				<li>{{val1 ~ ' '~ operateur ~ ' ' ~ val2 ~ " = " ~ resultat}}</li>
			{% elseif op == "fois" %}
				{% set resultat = val1 * val2 %}
                {% set operateur = "*" %}
				<li>{{val1 ~ ' '~ operateur ~ ' ' ~ val2 ~ " = " ~ resultat}}</li>
			{% elseif op == "div" and val2 != 0 %}
				{% set resultat = val1 / val2 %}
                {% set operateur = "/" %}
				<li>{{val1 ~ ' '~ operateur ~ ' ' ~ val2 ~ " = " ~ resultat}}</li>
			{% else %}
				{% set resultat = "Erreur" %}
				<li>{{ resultat ~ " division par zéros!" }}</li>
			{% endif %}
		</ul>

		This friendly message is coming from:
		<ul>
			<li>Your controller at
				<code>
					<a href="{{ 'D:/2iTech/08mai-php-symfony6/cours_symfony/src/Controller/CalculController.php'|file_link(0) }}">src/Controller/CalculController.php</a>
				</code>
			</li>
			<li>Your template at
				<code>
					<a href="{{ 'D:/2iTech/08mai-php-symfony6/cours_symfony/templates/calcul/index.html.twig'|file_link(0) }}">templates/calcul/index.html.twig</a>
				</code>
			</li>
		</ul>
	</div>
{% endblock %}
